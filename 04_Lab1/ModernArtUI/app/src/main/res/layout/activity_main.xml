<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:background="@color/black"
        android:id="@+id/palette"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true">

        <View
            android:id="@+id/view1"
            android:layout_width="128dp"
            android:layout_height="362dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:background="@color/dull_green"

            android:tag="@color/dull_green"></View>

        <View
            android:id="@+id/view2"
            android:layout_width="wrap_content"
            android:layout_height="235dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="9dp"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/view1"
            android:layout_toRightOf="@+id/view1"
            android:background="@color/dull_blue"
            android:tag="@color/dull_blue"></View>

        <View
            android:id="@+id/view3"
            android:layout_width="wrap_content"
            android:layout_height="202dp"
            android:layout_below="@+id/view2"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="139dp"
            android:layout_marginLeft="137dp"

            android:layout_marginTop="12dp"
            android:layout_toEndOf="@id/view2"
            android:layout_toRightOf="@+id/view2"
            android:background="@color/dull_light_gray"
            android:tag="@color/dull_light_gray"
            android:visibility="visible"></View>

        <View
            android:id="@+id/view4"
            android:layout_width="124dp"
            android:layout_height="357dp"
            android:layout_below="@+id/view3"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="-69dp"
            android:layout_toEndOf="@+id/view2"
            android:layout_toRightOf="@+id/view2"
            android:background="@color/dull_dark_blue"
            android:tag="@color/dull_dark_blue"></View>

        <View
            android:layout_width="wrap_content"
            android:layout_height="275dp"
            android:layout_below="@+id/view3"

            android:layout_marginStart="11dp"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="14dp"
            android:layout_toEndOf="@+id/view4"
            android:layout_toRightOf="@+id/view4"
            android:background="@color/dull_green"
            android:tag="@color/dull_green"></View>
    </RelativeLayout>

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:background="@color/black"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>
